<div class="comic">
  <div class="comic_header">
    <div class="comic_title"><%= @comic.title %></div>
    <div class="comic_date"><%= @comic.publish_date.strftime("%B %d %Y") %></div>
  </div>

  <div class="comic_image">
    <%= image_tag("oops.png", alt: @comic.title, title: @comic.title) %>
  </div>

  <div class="comic_nav">
    <%= link_for_comic(@first, "first") %>
    <%= link_for_comic(@previous, "previous") %>
    <div class="fill"></div>
    <%= link_for_comic(@next, "next") %>
    <%= link_for_comic(@latest, "latest") %>
  </div>
</div>
