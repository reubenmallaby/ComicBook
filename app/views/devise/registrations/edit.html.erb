<div class="profile-form">
  <div class="title"><%= I18n.t("devise.profile.edit_title") %></div>
  <div class="form-outer">
    <%= form_with(model: resource, scope: resource_name, url: registration_path(resource_name), method: :put, class: "form") do |form| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-content">
        <div class="form-row">
          <div class="form-label">
            <%= form.label :email, I18n.t("devise.sign_in.email") %>
          </div>
          <div class="form-input">
            <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-text" %>
          </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-row">
          <div class="form-label">
            <%= form.label :password, I18n.t("devise.profile.password") %>
          </div>
          <div class="form-input">
            <%= form.password_field :password, autocomplete: "new-password", class: "form-text" %>
            <% if @minimum_password_length %>
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-label">
            <%= form.label :password_confirmation, I18n.t("devise.profile.password_confirmation") %>
          </div>
          <div class="form-input">
            <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "form-text" %>
          </div>
        </div>

        <div class="form-row">
          <div class="form-label">
            <%= form.label :current_password, I18n.t("devise.profile.current_password") %>
          </div>
          <div class="form-input">
            <%= form.password_field :current_password, autocomplete: "current-password", class: "form-text" %>
            <em><%= I18n.t("devise.profile.current_password_reason") %></em>
          </div>
        </div>
      </div>

      <div class="form-footer">
        <div class="action form-cancel">
          <%= link_to :back do %>
            <i class='fa fa-chevron-left' aria-hidden='true'></i> <%= I18n.t("back") %>
          <% end %>
        </div>

        <div class="spacer"></div>
        <div class="action"><%= button_to I18n.t("devise.profile.cancel_account"), registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "button danger" %></div>
        <div class="spacer"></div>

        <div class="action submit">
          <%= button_tag :submit, class: "button", id: "sign-in-button" do %>
            <%= I18n.t("devise.profile.submit") %><i class='fa fa-chevron-right' aria-hidden='true'></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
