<div class="devise-links">

  <%= devise_link_to_sign_in(resource_name, controller_name)  if controller_name != 'sessions'%>
  <%= devise_link_to_sign_up(resource_name)                   if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= devise_link_to_forgot_password(resource_name)           if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= devise_link_to_confirmation_instructions(resource_name) if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= devise_link_to_unlock_instructions(resource_name)       if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>

  <% if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %>
    <% end %>
  <% end %>
</div>


