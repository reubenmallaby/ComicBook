<% content_for :left_side do %>
  <div class="actions">
    <div class="action">
      <%= link_to manage_new_comic_path, class: "new" do %>
        <i class='fa fa-square-plus' aria-hidden='true'></i>
        <%= I18n.t("comic.new") %>
      <% end %>
    </div>
  </div>

  <div class="calendar">
    <div class="years">
      <% @years.each do |year| %>
        <% y = year["y"].to_i %>
        <% year_text = "#{y} (#{year["c"]})" %>

        <div class="year">
          <% current_year = @year == y %>
          <%= link_to year_text, manage_comics_for_year_path(year: y), class: current_year ? 'current' : 'single' %>
          <% if current_year %>
            <div class="months">
              <% @months.each do |month| %>
                <% m = month["m"].to_i %>
                <% current_month = @month == m %>
                <div class="month">
                  <% month_text = "#{I18n.t("date.month_names")[m]} (#{month['c']})" %>
                  <%= link_to month_text, manage_comics_for_month_path(year: @year, month: month["m"]), class: , class: current_month ? 'current' : 'single' %>
                  <% if current_month %>
                    <% if @comics.count > 1 %>
                      <div class="comics">
                        <% @comics.each do |comic| %>
                          <% d = comic.publish_date %>
                          <% current_comic = @comic.publish_date.day == d.day %>
                          <div class="comic">
                            <%= link_to manage_comic_path(year: @year, month: @month, day: d.day), class: current_comic ? 'current' : 'single' do %>
                              <div class="date"><%= d.day %></div>
                              <div class="day"><%= I18n.t("date.day_names")[d.wday] %></div>
                            <% end %>
                          </div>
                        <% end %>
x                    </div>
                    <% end %>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>

      <% end %>
    </div>
  </div>
<% end %>

<div class="comic">
  <div class="comic-header">
    <div class="comic-title"><%= @comic.title %></div>
    <div class="comic-date"><%= @comic.publish_date.strftime("%B %d %Y") %></div>
  </div>

  <div class="comic-image">
    <%= image_tag @comic.image, alt: @comic.title, title: @comic.title %>
  </div>

  <div class="comic-nav">
    <% d = @comic.publish_date %>
    <%= link_to manage_edit_comic_path(@comic), class: "action link edit" do %>
      <i class='fa fa-pen-to-square' aria-hidden='true'></i>
      <%= I18n.t("edit") %>
    <% end %>
    <%= link_to manage_publish_comic_path(d.year, d.month, d.day), class: "action link publish", title: 'Publish/hide' do %>
      <%= published_icon(@comic) %>
      <%= @comic.is_published? ? I18n.t("hide") : I18n.t("publish") %>
    <% end %>
    <div class="fill"></div>
    <%= link_to manage_delete_comic_path(@comic), method: :delete, class: "action link delete" do %>
      <i class='fa fa-trash' aria-hidden='true'></i>
      <%= I18n.t("delete") %>
    <% end %>
  </div>
</div>
