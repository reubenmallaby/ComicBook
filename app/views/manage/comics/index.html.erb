<% content_for :left_side do %>
  <div class="left-side">
    <div class="actions">
      <div class="action">
        <%= link_to manage_new_comic_path, class: "new" do %>
          <i class='fa fa-square-plus' aria-hidden='true'></i>
          <%= I18n.t("comic.new") %>
        <% end %>
      </div>
    </div>

    <div class="spacer"></div>
    <%= render "manage/shared/side_view_calendar" %>
    <div class="spacer"></div>

    <%= render "manage/shared/tag_cloud" %>
  </div>
<% end %>

<h1><%= I18n.t("comic.title_manage_for") %></h1>
<div class="overview index">
  <div class="comics">
    <% @years.each do |year| %>
      <% y = year["y"] %>
      <% c = year["c"] %>
      <div class="comic">
        <%= link_to "#{y} (#{c})", manage_comics_for_year_path(year: y), class: "link" %>
      </div>
    <% end %>
  </div>
</div>
