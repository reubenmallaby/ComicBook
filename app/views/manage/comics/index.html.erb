<% content_for :left_side do %>
  <div class="actions">
    <div class="action">
      <%= link_to manage_new_comic_path, class: "new" do %>
        <i class='fa fa-square-plus' aria-hidden='true'></i>
        <%= I18n.t("comic.new") %>
      <% end %>
    </div>
  </div>

  <div class="spacer"></div>
  <%= render "side_view_calendar" %>
  <div class="spacer"></div>

  <div class="tag-cloud">
    <div class="title"><%= I18n.t("tags.title") %></div>
    <div class="tags">
      <% tag_cloud(@tags, %w(tag1 tag2 tag3 tag4)) do |tag, css_class| %>
        <%= link_to tag.name, manage_tagged_path(tag.name), :class => "tag #{css_class}" %>
      <% end %>
    </div>
  </div>
<% end %>

<h1><%= I18n.t("comic.title_manage_for") %></h1>
<div class="overview index">
  <div class="comics">
    <% @years.each do |year| %>
      <% y = year["y"] %>
      <% c = year["c"] %>
      <div class="comic">
        <%= link_to "#{y} (#{c})", manage_comics_for_year_path(year: y), class: "link" %>
      </div>
    <% end %>
  </div>
</div>
