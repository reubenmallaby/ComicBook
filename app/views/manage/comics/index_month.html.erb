<% content_for :left_side do %>
  <div class="left-side">
    <div class="actions">
      <div class="action">
        <%= link_to new_manage_comic_path, class: "new" do %>
          <i class='fa fa-square-plus' aria-hidden='true'></i>
          <%= I18n.t("comic.new") %>
        <% end %>
      </div>
    </div>

    <div class="spacer"></div>
    <%= render "manage/shared/side_view_calendar" %>

    <%= render "manage/shared/tag_cloud" %>
  </div>
<% end %>


<h1><%= I18n.t("comic.title_manage_for") %> <%= I18n.t("date.month_names")[@current_date.month] %> <%= @current_date.year %></h1>
<div class="overview">
  <div class="comics">
    <% @comics.each do |comic| %>
      <div class="comic">
        <% d = comic.publish_date %>
        <%= link_to manage_comic_show_by_date_path(d.year, d.month, d.day), class: "link", title: I18n.t("comic.go_to_comic") do %>
          <div class="date"><%= comic.publish_date.day %></div><div class="day"><%= I18n.t("date.day_names")[comic.publish_date.wday] %></div><div class="title"><%= comic.title %></div>
        <% end %>

        <div class="actions">
          <div class="button publish"><%= link_to_comic_publish_path(comic) %></div>
          <div class="button edit"><%= link_to_comic_edit_path(comic) %></div>
          <div class="button delete"><%= link_to_comic_delete_path(comic) %></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
