<% content_for :left_side do %>
  <div class="actions">
    <div class="action">
      <%= link_to manage_new_comic_path, class: "new" do %>
        <i class='fa fa-square-plus' aria-hidden='true'></i>
        <%= I18n.t("comic.new") %>
      <% end %>
    </div>
  </div>

  <div class="calendar">
    <div class="years">
      <% @years.each do |year| %>
        <% y = year["y"].to_i %>
        <% year_text = "#{y} (#{year["c"]})" %>

        <div class="year">
          <% current_year = @year == y %>
          <%= link_to year_text, manage_comics_for_year_path(year: y), class: current_year ? 'current' : 'single' %>
          <% if current_year %>
            <div class="months">
              <% @months.each do |month| %>
                <% m = month["m"].to_i %>
                <% current_month = @month == m %>
                <div class="month">
                  <% month_text = "#{I18n.t("date.month_names")[m]} (#{month['c']})" %>
                  <%= link_to month_text, manage_comics_for_month_path(year: @year, month: month["m"]), class: , class: current_month ? 'current' : 'single' %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>

      <% end %>
    </div>
  </div>
<% end %>

<h1><%= I18n.t("comic.title_manage_for") %> <%= I18n.t("date.month_names")[@month] %> <%= @year %></h1>
<div class="overview">
  <div class="comics">
    <% @comics.each do |comic| %>
      <div class="comic">
        <% d = comic.publish_date %>
        <%= link_to manage_comic_path(d.year, d.month, d.day), class: "link", title: I18n.t("comic.go_to_comic") do %>
          <div class="date"><%= comic.publish_date.day %></div><div class="day"><%= I18n.t("date.day_names")[comic.publish_date.wday] %></div><div class="title"><%= comic.title %></div>
        <% end %>

        <div class="actions">
          <div class="button publish"><%= link_to_comic_publish_path(comic) %></div>
          <div class="button edit"><%= link_to_comic_edit_path(comic) %></div>
          <div class="button delete"><%= link_to_comic_delete_path(comic) %></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
