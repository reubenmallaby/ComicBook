<% content_for :left_side do %>
  <div class="actions">
    <div class="action">
      <%= link_to manage_new_comic_path, class: "new" do %>
        <i class='fa fa-square-plus' aria-hidden='true'></i>
        <%= I18n.t("comic.new") %>
      <% end %>
    </div>
  </div>

  <div class="calendar">
    <div class="years">
      <% @years.each do |year| %>
        <% y = year["y"].to_i %>

        <div class="year">
          <% current_year = @year == y %>
          <%= link_to manage_comics_for_year_path(year: y), class: current_year ? 'current' : 'single' do %>
            <div class="year_number"><%= y %></div>
            <div class="count">(<%= year["c"] %>)</div>
          <% end %>

          <% if current_year %>
            <div class="months">
              <% @months.each do |month| %>
                <% m = month["m"].to_i %>
                <% current_month = @month == m %>
                <div class="month">
                  <%= link_to manage_comics_for_month_path(year: @year, month: month["m"]), class: , class: current_month ? 'current' : 'single' do %>
                    <div class="month_name"><%= I18n.t("date.month_names")[m] %></div>
                    <div class="count">(<%= month["c"] %>)</div>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>

      <% end %>
    </div>
  </div>
<% end %>

<h1><%= I18n.t("comic.title_manage_for") %> <%= @year %></h1>
<div class="overview">
  <div class="comics">
    <% @months.each do |month| %>
      <% m = month["m"].to_i || 0 %>
      <% c = month["c"] %>
      <% text = "#{I18n.t("date.month_names")[m]} (#{c})" %>
      <div class="comic"><%= link_to text, manage_comics_for_month_path(year: @year, month: m), class: "link" %></div>
    <% end %>
  </div>
</div>
