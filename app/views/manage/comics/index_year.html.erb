<% content_for :left_side do %>
  <div class="overview">
    <div class="actions">
      <div class="action">
        <%= link_to manage_new_comic_path, class: "new" do %>
          <i class='fa fa-square-plus' aria-hidden='true'></i>
          <%= I18n.t("comic.new") %>
        <% end %>
      </div>
    </div>

    <div class="header">Months</div>
    <% @months.each do |month| %>
      <% m = month["m"].to_i || 0 %>
      <ul class="comics">
        <li><%= link_to I18n.t("date.month_names")[m], manage_comics_for_month_path(year: @year, month: m) %></li>
      </ul>
    <% end %>
  </div>
<% end %>

<h1><%= I18n.t("comic.title_manage_for") %> <%= @year %></h1>
<div class="overview index">
  <div class="header">Months</div>
  <% @months.each do |month| %>
    <% m = month["m"].to_i || 0 %>
    <ul class="comics">
      <li><%= link_to I18n.t("date.month_names")[m], manage_comics_for_month_path(year: @year, month: m) %></li>
    </ul>
  <% end %>
</div>
