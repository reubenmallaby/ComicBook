<% content_for :left_side do %>
  <div class="actions">
    <div class="action">
      <%= link_to manage_new_comic_path, class: "new" do %>
        <i class='fa fa-square-plus' aria-hidden='true'></i>
        <%= I18n.t("comic.new") %>
      <% end %>
    </div>
  </div>
<% end %>

<h1><%= @max_count %> <%= I18n.t("tags.tagged_title") %> <%= @tag %></h1>
<div class="overview">
  <div class="comics">
    <% @comics.each do |comic| %>
      <div class="comic">
        <% d = comic.publish_date %>
        <%= link_to manage_comic_path(d.year, d.month, d.day), class: "link", title: I18n.t("comic.go_to_comic") do %>
          <div class="date"><%= d.year %></div>
          <div class="date"><%= I18n.t("date.month_names")[d.month] %></div>
          <div class="date"><%= d.day %></div>
          <div class="title"><%= comic.title %></div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
